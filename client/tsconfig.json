{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/auction-store/reducers/sessionReducers.js", "src/components/auctionModal/auctionModal.jsx", "src/app/auction/[id]/page.jsx", "src/hooks/useAuthRequired.js", "src/app/layout.tsx", "src/components/appBar/appBar.tsx", "src/shared/helpers/applicationHelpers.ts"],
  "exclude": ["node_modules"]
}
